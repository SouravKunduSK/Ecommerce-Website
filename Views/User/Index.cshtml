@model List<Shopping.Models.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="mt-4">All Customers</h2>
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Customers</li>

    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Customers Details

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-condensed table-hover table-bordered table-striped table" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>

                            <th>Serial No.</th>
                            <th>Customer ID</th>

                            <th>Customer Name</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Registered</th>
                            <th>Last Login</th>

                            <th>Total Orders</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>@(Model.IndexOf(item)+1)</td>

                            <td>@item.UserID</td>

                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.Email</td>

                            <td>@item.Mobile</td>
                            <td>@item.Created</td>
                            <td>@item.LastLogin</td>
                            <td>@item.Ordereds.Where(x=>x.UserID == item.UserID).Count()</td>

                        </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>