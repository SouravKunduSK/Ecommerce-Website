@using Shopping.Models;
@model Tuple<Ordered, IEnumerable<OrderDetail>>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="mt-4">Order Details</h2>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item ">Orders</li>
        <li class="breadcrumb-item active">Details</li>

    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Customer Details
            @*<a href="../Product/Create" class="btn btn-info pull-right fa fa-plus">Add New</a>*@
        </div>

        <div class="row">
            <div class="col-md-6">
                <dl class="d-lg-table-cell ">
                    <dt>
                        @Html.DisplayName("Order ID : ")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Item1.OrderedID)

                    </dd>
                    <dt>
                        @Html.DisplayName("Customer Name : ")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Item1.ShippingDetail.FirstName) @Html.DisplayFor(model => model.Item1.ShippingDetail.LastName)
                    </dd>
                    <dt>
                        @Html.DisplayName("Email : ")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Item1.ShippingDetail.Email)
                    </dd>
                    <dt>
                        @Html.DisplayName("Contact No : ")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Item1.ShippingDetail.Mobile)
                    </dd>

                </dl>
            </div>
            <div class="col-md-6">
                <dl class="dl-horizontal ">
                    <dt>
                        @Html.DisplayName("Payment Type : ")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Item1.Payment.PaymentType1.PaymentTypeName)
                    </dd>
                    <dt>
                        @Html.DisplayName("Shipping ID : ")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Item1.ShippingID)
                    </dd>
                    <dt>
                        @Html.DisplayName("District : ")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Item1.ShippingDetail.District.DistrictName)
                    </dd>
                    <dt>
                        @Html.DisplayName("Shipping Address : ")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Item1.ShippingDetail.Address)
                    </dd>
                    <dt>
                        @Html.DisplayName("Post Code : ")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Item1.ShippingDetail.PostalCode)
                    </dd>


                </dl>
            </div>
        </div>
    </div>


    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Orders Details

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-condensed table-hover table-bordered table-striped table" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{int i = 0;}
                        @foreach (var item in Model.Item2)
                        {
                            i++;
                            <tr>
                                <td>@i.ToString()</td>
                                <td>@item.Product.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice</td>
                                <td>@item.TotalAmount</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5"><h2></h2></td>

                        </tr>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>@ViewBag.TotalItems</th>
                            <th></th>
                            <th>@ViewBag.Amount </th>
                        </tr>
                        <tr>
                            <th>Discount</th>
                            <th colspan="3"></th>
                            <th>@ViewBag.Discount</th>
                        </tr>

                        <tr>
                            <th>Shipping Cost</th>
                            <th colspan="3"></th>
                            <th>@ViewBag.ShippingCost</th>
                        </tr>
                        <tr class="bg-info">
                            <th>Total Amount</th>
                            <th colspan="3"></th>
                            <th>@ViewBag.TAmount</th>
                        </tr>



                    </tfoot>

                </table>
            </div>


            <a onclick="window.history.back();" class="btn btn-primary">Back</a>
        </div>
    </div>

</div>