@model Shopping.Models.User

@{
    ViewBag.Title = "EditAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Edit Address</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Address</a></li>
                    <li class="breadcrumb-item active">Edit Address</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        <h3 style="color:red;">@TempData["msg"]</h3>
      

            @using (Html.BeginForm("EditAddress", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {


                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.Created, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.RoleType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.Modified, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.Picture, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.LastLogin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    @if (ViewBag.DistrictList != null)
                    {
                        <div class="col-md-6">
                            <h4>Select District</h4>


                            @Html.DropDownListFor(model => model.DistrictID, ViewBag.DistrictList as SelectList, "-- Select District ---", new { @class = "form-control" })
                        </div>
                    }


                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.PostalCode, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-6">
                        <h4>Postal Code</h4>
                        @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    @*@Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-12">
                        <h4>Full Address</h4>
                        @Html.TextAreaFor(model => model.Address, new { htmlAttributes = new { @class = "form-control " }, cols = "80",rows = "4" })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-10">
                        <a onclick="window.history.back();" class="btn btn-outline-danger">Cancel</a>
                        <input type="submit" class="btn btn-success" value="Update" />
                        @*<h3 style="color:red;">@TempData["msg"]</h3>*@
                    </div>
                </div>
            
        }
        </div>
    </div>
