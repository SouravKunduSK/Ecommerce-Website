@model Shopping.Models.User

@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Profile</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">My Account</a></li>
                    <li class="breadcrumb-item active">Profile</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        <div class="row new-account-login">
            <div class="col-sm-6 col-lg-6 mb-3">
                <div class="title-left">
                    <h3>Profile Picture</h3>
                    <input type="hidden" name="id" value="@Model.UserID" />
                </div>
                <a><img width="200px" , src="~/Uploads/@Model.Picture" style="height:200px"></a>
            </div>

            <div class="col-sm-6 col-lg-6 mb-3">
                <div class="title-left">
                    <h3>User Details</h3>
                </div>
                <h3>Name: <strong>@Model.FirstName @Model.LastName </strong> </h3>
                <h3>Email: <strong>@Model.Email </strong> </h3>
                <h3>Mobile No: <strong>@Model.Mobile </strong></h3>
                <h3>Registered Date: <strong>@Model.Created </strong> </h3>
                <h3>Edited Date: <strong>@Model.Modified </strong> </h3>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 col-lg-6 mb-3">
                <div class="checkout-address">
                    <a href="@Url.Action("Edit", "Account", new { id = Model.UserID})" class="btn hvr-hover">Edit Profile</a>
                </div>
            </div>
            <div class="col-sm-6 col-lg-6 mb-3">
                <div class="checkout-address">
                    <a href="@Url.Action("ChangePass", "Account", new { id = Model.UserID})" class="btn hvr-hover">Change Password</a>
                </div>
            </div>
        </div>
        

    </div>
</div>
<!-- End -->
