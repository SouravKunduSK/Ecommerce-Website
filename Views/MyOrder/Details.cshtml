@using Shopping.Models;
@model Tuple<Ordered, IEnumerable<OrderDetail>>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Order Details</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Orders</a></li>
                    <li class="breadcrumb-item active">Order Details</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        <div class="col-sm-6 col-lg-6 mb-3">
            <div class="checkout-address">
                <div class="title-left">
                    <h3>Yo</h3>
                </div>

                <div class="order-box">
                    <div class="d-flex">
                        <h4>Order ID</h4>
                        <div class="ml-auto font-weight-bold">@Model.Item1.OrderedID</div>
                    </div>
                    <div class="d-flex">
                        <h4>Customer Name</h4>
                        <div class="ml-auto font-weight-bold">@Model.Item1.ShippingDetail.FirstName @Model.Item1.ShippingDetail.LastName</div>
                    </div>
                    <div class="d-flex">
                        <h4>Email</h4>
                        <div class="ml-auto font-weight-bold">@Model.Item1.ShippingDetail.Email</div>
                    </div>

                    <div class="d-flex">
                        <h4>Mobile No</h4>
                        <div class="ml-auto font-weight-bold">@Model.Item1.ShippingDetail.Mobile</div>
                    </div>

                    <div class="d-flex">
                        <h4>Postal Code</h4>
                        <div class="ml-auto font-weight-bold">@Model.Item1.ShippingDetail.PostalCode</div>
                    </div>

                    <div class="d-flex">
                        <h4>District</h4>
                        <div class="ml-auto font-weight-bold">@Model.Item1.ShippingDetail.District.DistrictName </div>
                    </div>

                    <div class="d-flex">
                        <h4>Address</h4>
                        <div class="ml-auto font-weight-bold">@Model.Item1.ShippingDetail.Address</div>
                    </div>
                    <div class="d-flex">
                        <h4>Payment Type</h4>
                        <div class="ml-auto font-weight-bold">@Model.Item1.Payment.PaymentType1</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        @using (Html.BeginForm("Details", "MyOrder", FormMethod.Post))
        {

            <div class="row">

                <div class="col-lg-12">

                    <div class="table-main table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sr.No</th>

                                    <th>Product Name</th>
                                    <th>Product Image</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>

                                </tr>
                            </thead>



                            <tbody>
                                @{int i = 0;}
                                @foreach (var item in Model.Item2)
                                {
                                    i++;
                                <tr>
                                    <td>@i.ToString()</td>


                                    <td>@item.Product.ProductName</td>
                                    <td>
                                        <a href="#">
                                            <img height="80" width="80" src="~/Uploads/@item.Product.Picture1" alt="Product Image" />
                                        </a>
                                    </td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice</td>
                                    <td>@item.TotalAmount</td>
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="6"><h2></h2></td>

                                </tr>
                                <tr>
                                    <th> </th>
                                    <th> </th>
                                    <th> </th>
                                    <th>@ViewBag.TotalItems</th>
                                    <th></th>
                                    <th>@ViewBag.Amount </th>
                                </tr>
                                <tr>
                                    <th>Shipping Cost</th>
                                    <th colspan="4"></th>
                                    <th >@ViewBag.ShippingCost</th>
                                </tr>
                                <tr class="bg-info">
                                    <th>Total Amount</th>
                                    <th colspan="4"></th>
                                    <th >@ViewBag.TAmount</th>
                                </tr>



                            </tfoot>
                        </table>
                    </div>
                </div>

            </div>
            <a onclick="window.history.back();" class="btn btn-warning">Back</a>
        }
    </div>
</div>
